<h1> Tasks </h1>

<% @tasks.each do |task| %>
  <h3><%= link_to task.name, task_path(task) %></h3>
  <p><strong>Description:</strong> <%= task.description %></p>
  <p><strong>Task done?</strong> <%= task.status %></p>
  <p><%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></p>
<% end %>


<h3><%= link_to "Add a new task!", new_task_path %></h3>
